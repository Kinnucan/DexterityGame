<?xml version='1.0' encoding='utf-8'?>
<widget id="org.apache.cordova.test" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
        This project is used for testing adding the OSX platform.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="osx">
        <icon height="16" src="res/test-64x64.png" width="16" />
        <icon height="32" src="res/test-64x64.png" width="32" />
        <icon height="64" src="res/test-64x64.png" width="64" />
        <icon height="128" src="res/test-64x64.png" width="128" />
        <icon height="256" src="res/test-64x64.png" width="256" />
        <icon height="512" src="res/test-64x64.png" width="512" />
        <icon height="1024" src="res/test-64x64.png" width="1024" />
    </platform>
    <engine name="osx" spec="../../" />
</widget>
